
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-2">
        <div class="card mb-4">
            <div class="card-img-wrapper">
                <img src="https://randomuser.me/api/portraits/women/54.jpg" alt="{{member.knownAs}}" class="card-img-top">
                <ul class="list-inline member-icons animate text-center">
                    <li class="list-inline-item">
                        <a class="btn btn-primary" href="/messages/index">
                            <i class="fa fa-envelope"></i> 
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body p-1">
                <h6 class="card-title text-center mb-1">
                    <span>
                        <i class="fa fa-user mr-2"></i>
                    </span>
                </h6>
                <p class="card-text text-muted text-center">{{member.city}}</p>
            </div>
        </div>
    </div>
</div>


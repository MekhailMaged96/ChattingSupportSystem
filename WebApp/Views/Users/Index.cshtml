@model IEnumerable<Infrastructure.Data.Context.ApplicationUser>
@{
    ViewBag.Title = "Index";
}


<div class="card">
    <div class="card-header">
        Users
    </div>
    <div class="card-body">
        <div class="row">

            @foreach (var user in Model)
            {
                <div class="col-3">
                    <div class="card mb-4">
                        <div class="card-img-wrapper">
                            <img src="~/Uploads/user2.png" alt="@user.UserName" class="card-img-top" />
                        </div>
                        <div class="card-body text-center p-3">
                            <p class="card-text text-muted text-center">
                                <i class="fa fa-user"></i>
                                @user.UserName
                            </p>
                            <a class="btn btn-success" href="/messages/details/?username=@user.UserName">
                                Message
                            </a>

                        </div>
                    </div>
                </div>
            }
            </div>

    </div>
</div>


